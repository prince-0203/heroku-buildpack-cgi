#!/bin/sh

BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

mkdir -p $BUILD_DIR/tmp
mkdir -p $BUILD_DIR/bin
mkdir -p $CACHE_DIR
cp -r $LP_DIR/bin $BUILD_DIR

echo "-----> Installing GNU netcat..."
#if [ ! -f "$CACHE_DIR/nc" ]; then
  echo "       Downloading..."
  curl -L -s -S -o /usr/share/curl/curl-ca-bundle.crt http://curl.haxx.se/ca/cacert.pem
  curl -L -s -S -o nc.tgz https://sourceforge.net/projects/netcat/files/netcat/0.7.1/netcat-0.7.1.tar.gz/download
  tar zfx nc.tgz
  cd netcat-0.7.1/
  echo "       Configuring..."
  ./configure > /dev/null
  echo "       Compiling..."
  make > /dev/null
  cp src/netcat $CACHE_DIR/nc
#else
#  echo "       Installed from cache."
#fi
cp $CACHE_DIR/nc $BUILD_DIR/bin/nc
echo "       $($BUILD_DIR/bin/nc -h | head -n1)"
